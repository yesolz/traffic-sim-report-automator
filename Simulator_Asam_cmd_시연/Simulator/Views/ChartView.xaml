<UserControl x:Class="Simulator.Views.ChartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simulator.Views"
        xmlns:ViewModels="clr-namespace:Simulator.ViewModels"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"  
        mc:Ignorable="d" 
        Background="{StaticResource GrayPannel}">

    <DockPanel>
        <StackPanel Margin="0 2 2.5 2">
            <lvc:CartesianChart Width="auto" Height="auto" 
                                Background="{StaticResource GrayPannelBackground}" 
                                Series="{Binding CatesianSeries}">
            </lvc:CartesianChart>

            <lvc:CartesianChart Width="320" Height="200"
                                Background="{StaticResource GrayPannelBackground}" 
                                Series="{Binding CatesianSeries}">
            </lvc:CartesianChart>

            <lvc:CartesianChart Width="320" Height="200"
                                Background="{StaticResource GrayPannelBackground}" 
                                Series="{Binding CatesianSeries}">
            </lvc:CartesianChart>

            <lvc:CartesianChart Width="320" Height="200"
                                Background="{StaticResource GrayPannelBackground}" 
                                Series="{Binding CatesianSeries}">
            </lvc:CartesianChart>
        </StackPanel>

        <StackPanel Margin="2.5 2 2.5 2">
            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>

            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>

            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>

            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>
        </StackPanel>

        <StackPanel Margin="2.5 2 0 2">
            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>

            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>

            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>

            <lvc:PieChart Background="{StaticResource GrayPannelBackground}"
                          Series="{Binding PieSeries}">
            </lvc:PieChart>
        </StackPanel>
    </DockPanel>
</UserControl>
